<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
	</plugin-info>

	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n" location="simplebp"/>


	<!-- Blueprint: TEST -->
	<!-- add our web resources -->
	<web-resource key="simplebp-resources" name="simplebp Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<dependency>com.atlassian.confluence.plugins.confluence-create-content-plugin:resources</dependency>

		<transformation extension="soy">
	        <transformer key="soyTransformer">
	            <functions>com.atlassian.confluence.plugins.soy:soy-core-functions
	            </functions>
	        </transformer>
	    </transformation>
    
		<resource type="download" name="simplebp.css" location="/css/simplebp.css"/>
		<resource type="download" name="simplebp.js" location="/js/simplebp.js"/>
		<resource type="download" name="simplebp.soy.js" location="/soy/simplebp.soy"/>
		<resource type="download" name="images/" location="/images"/>

		<context>ig.blueprintplugin</context>
    	<context>atl.general</context>
    	<context>atl.admin</context>
	</web-resource>

	<!-- Template for Blueprint -->
	<content-template key="simplebp-template" template-title-key="my.blueprint.title">
		<resource name="template" type="download" location="/templates/mytemplate.xml" />
  		<!-- <context-provider class="infogate.plugins.confluence.blueprints.contextprovider.MyContextProvider"/> -->
	</content-template>
	
	<!-- Second Template for Blueprint -->
	<content-template key="simplebp-template2" template-title-key="my.blueprint.title2">
	    <resource name="template" type="download" location="/templates/mytemplate2.xml" />
	</content-template>

	<!-- Blueprint -->
	<!--blueprint key="my-blueprint" content-template-key="simplebp-template" index-key="my-index"-->
	<blueprint key="my-blueprint" how-to-use-template="MyPlugin.Blueprints.Simple.letsGetStarted" index-key="my-index">
	    <content-template ref="simplebp-template" />
	    <content-template ref="simplebp-template2" />
		<dialog-wizard key="simplebp-wizard">
         	<dialog-page id="page1Id"
						 template-key="MyPlugin.Blueprints.Simple.page1Form"
						 title-key="my.blueprint.wizard.page1.title"
						 description-header-key="my.blueprint.wizard.page1.desc.header"
						 description-content-key="my.blueprint.wizard.page1.desc.content"
						 last="true"/>
	    </dialog-wizard>
	</blueprint>
	
	<!--listener name="My Blueprint-Listener" key="myblueprintlistener" class="infogate.plugins.confluence.blueprints.listener.MyBlueprintListener"/-->

	<!-- Add to the Create Menu -->
	<web-item key="create-by-sample-template" i18n-name-key="my.create-link.title" section="system.create.dialog/content">
		<description key="my.create-link.description" />
		<resource name="icon" type="download" location="/images/myblueprint.png" />
		<param name="blueprintKey" value="my-blueprint" />
	</web-item>


	<!-- Blueprint: Form -->
	<!-- add our web resources -->
	<web-resource key="form-resources" name="Form: Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<dependency>com.atlassian.confluence.plugins.confluence-create-content-plugin:resources</dependency>

		<transformation extension="soy">
	        <transformer key="soyTransformer">
	            <functions>com.atlassian.confluence.plugins.soy:soy-core-functions
	            </functions>
	        </transformer>
	    </transformation>
    
		<resource type="download" name="form.css" location="/css/form.css"/>
		<resource type="download" name="form.js" location="/js/form.js"/>
		<resource type="download" name="form.soy.js" location="/soy/form.soy"/>
		<resource type="download" name="images/" location="/images"/>

		<context>ig.blueprintplugin</context>
    	<context>atl.general</context>
    	<context>atl.admin</context>
	</web-resource>

	<!-- Template for Blueprint -->
	<content-template key="form-template" template-title-key="infogate.formblueprint.template.title">
		<resource name="template" type="download" location="/templates/form.xml" />
	</content-template>

	<!-- Blueprint -->
	<blueprint key="form-blueprint" how-to-use-template="Infogate.Blueprints.Form.letsGetStarted" i18n-index-title-key="infogate.formblueprint.indextitle" index-key="form-blueprint-index">
	    <content-template ref="form-template" />
		<dialog-wizard key="form-wizard">
         	<dialog-page id="page1Id"
						 template-key="Infogate.Blueprints.Form.page1Form"
						 title-key="infogate.formblueprint.wizard.page1.title"
						 description-header-key="infogate.formblueprint.wizard.page1.desc.header"
						 description-content-key="infogate.formblueprint.wizard.page1.desc.content"
						 last="true"/>
	    </dialog-wizard>
	</blueprint>

	<!-- Add to the Create Menu -->
	<web-item key="create-by-form-template" i18n-name-key="infogate.formblueprint.create-link.title" section="system.create.dialog/content">
		<description key="infogate.formblueprint.create-link.description" />
		<resource name="icon" type="download" location="/images/myblueprint.png" />
		<param name="blueprintKey" value="form-blueprint" />
	</web-item>


	<!-- Blueprint: Feature -->
	<!-- add our web resources -->
	<web-resource key="feature-resources" name="Feature: Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<dependency>com.atlassian.confluence.plugins.confluence-create-content-plugin:resources</dependency>

		<transformation extension="soy">
	        <transformer key="soyTransformer">
	            <functions>com.atlassian.confluence.plugins.soy:soy-core-functions
	            </functions>
	        </transformer>
	    </transformation>
    
		<resource type="download" name="feature.css" location="/css/feature.css"/>
		<resource type="download" name="feature.js" location="/js/feature.js"/>
		<resource type="download" name="feature.soy.js" location="/soy/feature.soy"/>
		<resource type="download" name="images/" location="/images"/>

		<context>ig.blueprintplugin</context>
    	<context>atl.general</context>
    	<context>atl.admin</context>
	</web-resource>

	<!-- Template for Blueprint -->
	<content-template key="feature-template" template-title-key="infogate.featureblueprint.template.title">
		<resource name="template" type="download" location="/templates/feature.xml" />
	</content-template>

	<!-- Blueprint -->
	<blueprint key="feature-blueprint" how-to-use-template="Infogate.Blueprints.Feature.letsGetStarted" i18n-index-title-key="infogate.featureblueprint.indextitle" index-key="feature-blueprint-index">
	    <content-template ref="feature-template" />
		<dialog-wizard key="feature-wizard">
         	<dialog-page id="page1Id"
						 template-key="Infogate.Blueprints.Feature.page1Form"
						 title-key="infogate.featureblueprint.wizard.page1.title"
						 description-header-key="infogate.featureblueprint.wizard.page1.desc.header"
						 description-content-key="infogate.featureblueprint.wizard.page1.desc.content"
						 last="true"/>
	    </dialog-wizard>
	</blueprint>

	<!-- Add to the Create Menu -->
	<web-item key="create-by-feature-template" i18n-name-key="infogate.featureblueprint.create-link.title" section="system.create.dialog/content">
		<description key="infogate.featureblueprint.create-link.description" />
		<resource name="icon" type="download" location="/images/myblueprint.png" />
		<param name="blueprintKey" value="feature-blueprint" />
	</web-item>
</atlassian-plugin>
